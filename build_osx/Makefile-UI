VPATH = ../app

#<<<<<<< update for local machine
HOMEDIR = ../..

SSCDIR = $(HOMEDIR)/ssc
WEXDIR = $(HOMEDIR)/wex
WEXLIB = $(WEXDIR)/wexosxwx3.a
LKDIR = $(HOMEDIR)/lk
LKLIB = $(LKDIR)/lkosxwx3.a
STDIR = $(HOMEDIR)/SolTrace/coretrace
STLIB = $(STDIR)/build_osx/coretrace.a
SHAREDIR = $(SSCDIR)/build_osx
SHAREDLIB = $(SHAREDIR)/shared.a
FCLIB = ./fieldcore.a
FCDIR = $(SSCDIR)/solarpilot
NLOPTLIB = $(SHAREDIR)/nlopt.a

CC = gcc -mmacosx-version-min=10.9
CXX = g++ -mmacosx-version-min=10.9
CFLAGS = -I. -I$(WEXDIR)/include -I$(LKDIR)/include -I$(SSCDIR) -I../rapidxml -I$(FCDIR) -I$(STDIR) -D__64BIT__ -g -O3 -DWX_PRECOMP -arch x86_64  -fno-common -DSP_STANDALONE -D_GLIBCXX_USE_NANOSLEEP `wx-config-3 --cflags` 

CXXFLAGS = $(CFLAGS) -std=gnu++11
LDFLAGS =  -v $(WEXLIB) $(LKLIB) $(STLIB) $(FCLIB) $(NLOPTLIB) $(SHAREDLIB)  -std=gnu++11 `wx-config-3 --libs stc` `wx-config-3 --libs aui` `wx-config-3 --libs` -lm  -ldl -lcurl 


OBJECTS  = \
	FieldPlot.o \
	FluxPlot.o \
	gui_about_dialog.o \
	GUI_ClimatePage.o \
	GUI_CostPage.o \
	GUI_HeliostatPage.o \
	GUI_LayoutPage.o \
	GUI_LayoutSimulationPage.o \
	GUI_main.o \
	GUI_MarketPage.o \
	GUI_OptimizationPage.o \
	GUI_ParametricSimulationPage.o \
	GUI_PerformanceSimulationPage.o \
	GUI_PlotFieldPage.o \
	GUI_PlotFluxPage.o \
	GUI_ReceiverPage.o \
	GUI_ResultsPage.o \
	GUI_SimulationsPage.o \
	gui_util.o \
	ImageCanvas.o \
	InputControl.o \
	OutputControl.o \
	kml_select_dialog.o \
	layout_sim_export_dialog.o \
	numericvareditform.o \
	pagepanel.o \
	param_dialog.o \
	par_edit_ctrls.o \
	plot_base.o \
	plot_contourf.o \
	plot_scatter.o \
	rec_select_dialog.o \
	sandbox.o \
	settings_dialog.o\
	rename_dialog.o\
	kml_select_dialog.o\
	parse_kml.o\
	scripting.o

TARGET = solarpilot

$(TARGET): $(OBJECTS) 
	$(CXX) -g -o $@ $^ $(LDFLAGS)
	cp $(TARGET) ../deploy/osx

clean:
	rm -f $(TARGET) $(OBJECTS)

